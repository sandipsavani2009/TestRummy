<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:keepScreenOn="true">

    <FrameLayout
        android:id="@+id/home_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="-1dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/color_three"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/tab_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:visibility="invisible"
                    android:id="@id/home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="4dp"
                    android:text="Home"
                    android:textColor="@color/colorAccent" />

                <RadioButton
                    android:visibility="invisible"
                    android:id="@+id/lobby"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="4dp"
                    android:text="Lobby"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/tournaments"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="4dp"
                    android:text="Tourney"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/tables"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="4dp"
                    android:text="Tables"
                    android:textColor="@color/white" />

                <RadioButton

                    android:id="@+id/support"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="4dp"
                    android:text="Support"
                    android:textColor="@color/white"
                    android:visibility="invisible" />

                <RadioButton
                    android:visibility="invisible"
                    android:id="@+id/more"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="4dp"
                    android:text="More"
                    android:textColor="@color/white" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fab_margin">

                <RadioButton
                    android:id="@+id/rb_home_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/home_tab_selector"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="false" />

            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fab_margin">

                <RadioButton
                    android:id="@+id/rb_lobby_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/lobby_tab_selector"
                    android:button="@null"
                    android:clickable="false" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fab_margin">

                <RadioButton
                    android:id="@+id/rb_table_image"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/table_off"
                    android:button="@null"
                    android:clickable="false" />

            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fab_margin">

                <RadioButton
                    android:id="@+id/rb_support_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/support_tab_selector"
                    android:button="@null"
                    android:clickable="false" />

            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fab_margin">

                <RadioButton
                    android:id="@+id/rb_more_image"
                    android:layout_width="20dp"
                    android:layout_height="5dp"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/more_tab_selector"
                    android:button="@null"
                    android:clickable="false" />

            </LinearLayout>

            <Button
                android:id="@+id/live_chat_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_centerInParent="true"
                android:background="@color/accent_500"
                android:gravity="center"
                android:padding="@dimen/marginMedium"
                android:text="Online - Live Chat"
                android:textColor="@color/white"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
