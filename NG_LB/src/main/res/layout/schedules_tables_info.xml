<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginRight="@dimen/half_fab_margin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/schedulesLabel_tv"
                android:text="Schedules"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/schedulesValue_tv"
                android:layout_marginLeft="4dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Level"
                android:textSize="11sp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:text="Schedule Time"
                android:textSize="11sp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:text="Bet"
                android:textSize="11sp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:text="Qualify"
                android:textSize="11sp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:text="Re-buy"
                android:textSize="11sp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/smokey_white"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/half_fab_margin"></View>

        <ListView
            android:id="@+id/levelsList"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/smokey_white"
            android:dividerHeight="1dp" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white"></View>

    <LinearLayout
        android:layout_marginLeft="@dimen/half_fab_margin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableLabel"
                    android:text="Tables"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Table ID"
                    android:textSize="11sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:text="Players"
                    android:textSize="11sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:text="High"
                    android:textSize="11sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:text="Low"
                    android:textSize="11sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/smokey_white"
                android:layout_height="1dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="@dimen/half_fab_margin"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8">

                    <ListView
                        android:id="@+id/tourneyTablesList"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/smokey_white"
                        android:dividerHeight="1dp" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/register_btn_schedules"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/color_one"/>
            <Button
                android:id="@+id/deregister_btn_schedules"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Deregister"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/color_one"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>