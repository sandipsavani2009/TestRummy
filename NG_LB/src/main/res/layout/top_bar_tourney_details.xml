<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_height="@dimen/lobby_taj_logo_height"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/lobby_taj_logo_width"
            android:layout_height="@dimen/lobby_taj_logo_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logo_name" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="2dp"
        android:layout_height="@dimen/lobby_filter_bar_height"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_left_arrow"
            android:layout_marginLeft="@dimen/half_fab_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/prizeInfo_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/prizeInfo_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/prizeinfo_on"/>
                <TextView
                    android:id="@+id/prizeInfo_tv"
                    android:text="@string/tourney_and_prize_info"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/highlight_font_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/schedulesTables_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/schedules_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/tables_off"/>
                <TextView
                    android:id="@+id/schedules_tv"
                    android:text="@string/schedules_and_tables"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/players_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/players_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/player"/>
                <TextView
                    android:id="@+id/players_tv"
                    android:text="Players"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
