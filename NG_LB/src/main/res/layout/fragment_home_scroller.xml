<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loading_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/preLobbyToBarHeight"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/marginSizeSmall"
        android:paddingTop="@dimen/preLobbyTopBarMargin"
        android:paddingBottom="@dimen/preLobbyTopBarMargin">

        <ImageView
            android:id="@+id/logo_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:contentDescription="@string/image_content"
            android:src="@drawable/productlogo"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:orientation="vertical"
                android:paddingLeft="@dimen/marginSizeMicro">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prelobby_real_chips_txt"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="@dimen/settingsViewInfoTitleTextSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/preblobby_in_play_txt"
                    android:textColor="@color/color_one"
                    android:textSize="@dimen/settingsViewInfoTitleTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_real_chips_value_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/paddingSizeSmall"
                    android:scrollbars="horizontal"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="@dimen/settingsViewInfoTitleTextSize" />

                <TextView
                    android:id="@+id/inplay_value_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/paddingSizeSmall"
                    android:scrollbars="horizontal"
                    android:textColor="@color/color_one"
                    android:textSize="@dimen/settingsViewInfoTitleTextSize" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/buyChipsBtn"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_weight="0.13"
            android:background="@drawable/buy_chips"
            android:contentDescription="@string/image_content"
            android:textSize="11sp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/marginSizeMicro">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/prelobby_fun_chips_txt"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="@dimen/settingsViewInfoTitleTextSize" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/preblobby_fun_in_play_txt"
                    android:textColor="@color/color_one"
                    android:textSize="@dimen/settingsViewInfoTitleTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_fun_chips_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/paddingSizeSmall"
                    android:scrollbars="horizontal"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="@dimen/settingsViewInfoTitleTextSize" />

                <TextView
                    android:id="@+id/inplay_fun_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/paddingSizeSmall"
                    android:scrollbars="horizontal"
                    android:textColor="@color/color_one"
                    android:textSize="@dimen/settingsViewInfoTitleTextSize" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/reload_chips_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="@dimen/half_fab_margin"
            android:layout_weight="0.026"
            android:contentDescription="@string/image_content"
            android:src="@drawable/reload" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prelobby_welcome_title"
                android:textColor="@color/WhiteSmoke"
                android:textSize="@dimen/settingsViewInfoTitleTextSize" />

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="@dimen/marginSizeMicro"
                android:text="@string/app_name"
                android:textColor="@color/color_one"
                android:textSize="@dimen/settingsViewInfoTitleTextSize" />

            <ImageView
                android:visibility="gone"
                android:src="@drawable/ic_logo_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="visible">

                <RadioGroup
                    android:id="@+id/pre_lobby_tab_group"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pre_lobby_chips_strip_height"
                    android:layout_marginBottom="@dimen/marginMedium"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1.0">

                    <RadioButton
                        android:id="@+id/cash_games_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:background="@drawable/chips_selector"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center"
                        android:paddingBottom="@dimen/pre_lobby_strip_margin"
                        android:text="@string/cash_games_title"
                        android:textColor="@color/White"
                        android:textSize="@dimen/pre_lobby_games_strip_txt_size"
                        android:visibility="visible" />

                    <RadioButton
                        android:id="@+id/free_games_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:background="@drawable/chips_selector"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:text="@string/free_games_title"
                        android:textColor="@color/highlight_font_scroller"
                        android:textSize="@dimen/pre_lobby_games_strip_txt_size" />
                </RadioGroup>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/left_arrow_btn"
                    android:layout_width="@dimen/preLobbyArrowWidthHeight"
                    android:layout_height="@dimen/preLobbyArrowWidthHeight"
                    android:contentDescription="@string/image_content"
                    android:src="@drawable/arrow" />

                <in.glg.rummy.fancycoverflow.FancyCoverFlow
                    android:id="@+id/fancyCoverFlow"
                    android:layout_width="@dimen/coverflow_width"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/right_arrow_btn"
                    android:layout_width="@dimen/preLobbyArrowWidthHeight"
                    android:layout_height="@dimen/preLobbyArrowWidthHeight"
                    android:contentDescription="@string/image_content"
                    android:rotation="180.0"
                    android:src="@drawable/arrow" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/build_version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/marginSizeMicro"
            android:gravity="center"
            android:textColor="@color/copyRightsTxtColor"
            android:textSize="@dimen/textSizeCopyRight" />

        <ImageView
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-10dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_logo_name"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </RelativeLayout>
</LinearLayout>
