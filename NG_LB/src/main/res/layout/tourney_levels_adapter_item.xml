<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/half_fab_margin"
    android:paddingBottom="@dimen/half_fab_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/level_tv"
        android:text="Level"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/scheduleTime_tv"
        android:text="Schedule Time"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/bet_tv"
        android:text="Bet"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/qualify_tv"
        android:text="Qualify"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/rebuy_tv"
        android:text="Re-buy"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>